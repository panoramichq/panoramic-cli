{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://panoramichq.com/context.schema.json",
    "title": "Context",
    "description": "Context for pano-cli client",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "api_version": {
            "description": "Version of the Context schema",
            "type": "string",
            "enum": [
                "v1"
            ]
        },
        "connection": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "dialect": {
                    "type": "string",
                    "enum": [
                        "bigquery",
                        "snowflake"
                    ]
                }
            },
            "anyOf": [
                {
                    "required": ["url"]
                },
                {
                    "required": ["dialect"]
                }
            ]
        }
    },
    "required": [
        "api_version"
    ]
}
